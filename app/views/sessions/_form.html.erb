  <%= form_with scope: :session, url: sessions_path, local: true do |f| %>

    <%= hidden_field_tag :redirect_url, local_assigns[:redirect_url] if local_assigns[:redirect_url] %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Mot de passe" %>

      <%= f.label :remember_me %>
      <%= f.check_box :remember_me %>

      <%= f.submit %>
      
  <% end %>

  <p>
    Pas encore inscrit ? <%= link_to "S'inscrire", new_user_path %>
  </p>

  <p>
    Mot de passe oublié?
    <%= link_to "Réinitialiser le mot de passe", new_users_password_reset_path %>
  </p>

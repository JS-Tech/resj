<% content_for :id, 'connexion' %>

<div class="top">
	<h1>Connexion</h1>
</div>

<%= form_for :session, url: sessions_path do |f| %>
	<div class="field">
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :remember_me %>
		<%= f.check_box :remember_me %>
	</div>
	<div class="field">
		<%= f.submit class: 'submit' %>
	</div>
	<%= link_to "Password forgotten", new_password_reset_path %>

<% end %>
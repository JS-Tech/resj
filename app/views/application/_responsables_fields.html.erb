<%= f.fields_for :responsable, (@card.responsable or Responsable.new) do |responsable_fields| %>
	<%= responsable_fields.text_field :firstname %>
	<%= responsable_fields.text_field :lastname %>
	<%= responsable_fields.text_field :email %>
<% end %>
<div class="association_fields">
	<%= f.fields_for :responsables do |responsables_fields| %>
		<div class="fields">
			<%= responsables_fields.text_field :firstname %>
			<%= responsables_fields.text_field :lastname %>
			<%= responsables_fields.text_field :email %>
			<%= responsables_fields.hidden_field :_destroy %>
			<%= link_to_remove_fields "remove" %>
		</div>
	<% end %>
	<%= link_to_add_fields("New responsable") %>
</div>
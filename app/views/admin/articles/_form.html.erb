<%= content_for :id, "admin_article" %>

<%= form_for [:admin, @article] do |f| %>

	<%= render 'error_messages', object: f.object %>

	<div class="col split1">
		<div class="block">
			<div class="header">
				<h2>Informations Générales</h2>
			</div>
			<ul>
				<li>
					<%= f.label :title %>
					<%= f.text_field :title %>
				</li>
				<li>

					<%= f.label :content %>
					<small>
						Exemple :
						<%= render 'example' %>
					</small>
					<%= f.text_area :content, id: 'article-area' %>
				</li>
			</ul>
		</div>
		<button class="article-btn-pre" type="button">Montrer la prévisualisation</button>
		<article class="article" id="article-pre">
		</article>
	</div>
	<div class="row">
		<div class="col split2">
			<div class="block">
				<ul>
					<li>
						<%= f.label :published_at %>
						<%= f.datetime_select :published_at %>
					</li>
				</ul>
			</div>
		</div>
		<div class="col split2">
			<div class="block">
				<ul>
					<li>
						<%= f.label :theme_ids %>
						<%= f.collection_select :theme_ids, Theme.all, :id, :name, {include_blank: "Sélectionnez des thèmes"}, {class: "selectize-themes", multiple: true} %>
					</li>
					<li>
						<%= f.label :image %>
						<%= f.file_field :image %>
					</li>
				</ul>
			</div>
		</div>
	</div>

	<%= f.submit %>

<% end %>
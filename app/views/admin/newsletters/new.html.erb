<h1>Newsletter</h1>

<%= form_tag admin_newsletters_path do %>

<div class="row">
	<ul>

		<li><%= text_field_tag :subject, nil, placeholder: "Sujet" %></li>

		<li><%= text_area_tag :content, "Contenu" %></li>

		<li>
			<%= select_tag :emails,
				grouped_options_for_select([["Orateurs", map_users(@orators)],
				["PropriÃ©taires", map_users(@owners)], ["Responables", map_users(@resps)],
				["Utilisateurs", map_users(@users)]]), multiple: true, id: "email-select" %>
		</li>
		<li>
			<%= submit_tag "Envoyer",

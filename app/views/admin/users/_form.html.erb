<%= form_for [:admin, @user] do |f| %>

	<%= render 'error_messages', object: f.object %>

	<table>
		<tr>
			<td><%= f.label :email %></td>
			<td><%= f.text_field :email %></td>
		</tr>
		<tr>
			<td><%= f.label :gravatar_email %></td>
			<td><%= f.text_field :gravatar_email %></td>
		</tr>
		<tr>
			<td><%= f.text_field :firstname %></td>
			<td><%= f.label :firstname %></td>
		</tr>
		<tr>
			<td><%= f.text_field :lastname %></td>
			<td><%= f.label :lastname %></td>
		</tr>
		<tr>
			<td><%= f.label :user_type_id %></td>
			<td><%= f.collection_select(:user_type_id, UserType.all, :id, :name) %></td>
		</tr>
		<tr>
			<td><%= f.label :password %></td>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<td><%= f.label :password_confirmation %></td>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
		<tr>
			<td><%= f.submit %></td>
		</tr>
	</table>

<% end %>
<h1><%=t 'card.edit.title' %></h1>

<%= form_for [:admin, @card] do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :description %>
	<%= f.text_area :description %><br>

	<%= f.label :street %>
	<%= f.text_field :street %><br>

	<%= f.label :npa %>
	<%= f.number_field :npa %><br>

	<%= f.label :city %>
	<%= f.text_field :city %><br>

	<%= f.label :contact %>
	<%= f.text_field :contact %><br>

	<%= f.label :email %>
	<%= f.text_field :email %><br>

	<%= f.label :place %>
	<%= f.text_field :place %><br>

	<%= f.label :website %>
	<%= f.text_field :website %><br>

	<%= f.label :password_digest %>
	<%= f.password_field :password_digest %><br>

	<%= f.label :responsables %>
	<%= f.text_field :responsables %><br>

	<%= f.label :card_type_id %>
	<%= f.collection_select(:card_type_id, CardType.all, :id, :name) %><br>

	<% if !@card.validated %>
		<%= f.label :validated %>
		<%= f.check_box :validated, {}, true %>
	<% end %>

	<%= f.submit %>
<% end %>
<div>
  <p class="paginate-infos"><%#= paginate_range @cards_paginate %></p>
  <%#= will_paginate @cards_paginate %>
</div>

<div class="index" ng-cloak>
  <div ng-show="cards">
    <ul>
  		<li class="letter">{{ letter.current }}</li>
  		<div ng-repeat="card in cards">
        <display-letter new="{{ card.name[0].toLowerCase() }}">{{ card.name[0].toLowerCase() }}</display-letter>
  			<li class="card">
          <span class="type">{{ card.card_type.name }}</span>
          <a ng-href="cards/{{ card.id }}-{{ card.name }}">{{ card.name }}</a>
          <i class="fi-arrow-down show-description"></i>
          <i class="fi-marker show-on-map {{ card.map_marker_color }}" data-id="{{ card.id }}"></i>
          <p class="description"><i class="fi-megaphone"></i>{{ card.description }}</p>
        </li>
  		<div>
    </ul>
  </div>

  <div id="clear"></div>

  <div ng-hide="cards.length" class="nothing">
    <p class="icon"><span class="fi-list-bullet"></span></p>
    <p>Votre recherche n'a donné aucun résultat.</p>
  </div>
</div>
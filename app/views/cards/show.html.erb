<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyDNsGj5h-WJXPiLtYVn0TSfiisPwhEAbjg&sensor=false" %>
<%= javascript_include_tag "card-show-map.js" %>

<% content_for :banH, '0' %>
<% content_for :banI, '' %>
<% content_for :id, 'cards-show' %>

<div class="top">
	<h1><%= @card.card_type.name %>: <%= @card.name %></h1>
</div>

<div class="row">
	<div class="left">
		<%= img = image_tag(@card.avatar_url) if img.present? %>
		<%= img = image_tag(@card.banner_url) if img.present? %>

		<div class="description"><%= @card.description %></div>

		<div class="location">
			<i class="foundicong-location"></i>
			<p><%= @card.street %></p>
			<p><%= @card.npa %> <%= @card.city %></p>
			<p><%= @card.place %></p>
		</div>
		<div class="contact">
			<i class="foundicong-mail"></i>
			<p><%= @card.email or ' - ' %></p>
		</div>
		<div class="website">
			<i class="foundicong-globe"></i>
			<p><%= @card.website or ' - ' %></p>
		</div>
	</div>
	<div class="right">
		<div id="map-canvas"></div>
	</div>
</div>

<div class="clear"></div>

<% @card.responsables.each do |responsable| %>
	<%= responsable.firstname %>
	<%= responsable.lastname %>
	<%= responsable.email %>
<% end %>

<% @card.affiliations.each do |affiliation| %>
	<%= affiliation.name %>
<% end %>



<% @card.tags.each do |tag| %>
	<%= tag.name %>
<% end %>

<script type="text/javascript">
	window.onload=gmap.initialize(<%= @card.latitude %>, <%= @card.longitude %>);
</script>
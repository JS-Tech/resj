<%= form_for @card, url: change_cards_path, remote: true do |f| %>

	<%= render 'step_header', f: f %>

	<%= render 'error_messages', object: f.object %>
	<%= yield f %>
	<%= f.hidden_field :current_step, value: @card.current_step %>

	<%= f.submit "Back", :name => "step[#{@card.previous_step}]" unless @card.first_step? %>
	
	<% unless @card.last_step? %>
		<%= f.submit "Continue", :name => "step[#{@card.next_step}]"  %>
		<%= f.submit "Final", :name => "step[final]" %>
	<% end %>
<% end %>
<%= form_for @card, url: change_cards_path, remote: true do |f| %>

	<%= f.hidden_field :current_step, value: @card.current_step %>
	<%= f.submit "General", :name => "step[general]" %>
	Name: <%= @card.name %>
	Description: <%= @card.description %>
	<%= f.submit "Contact", :name => "step[team]" %>
	Email: <%= @card.email %>
	Website: <%= @card.website %>
	
<% end %>

<%= link_to "Sent", cards_path, method: :post %>